<h1 class="text-center mt-4"> Category: <%=@category.name %> </h1>

<div class= "text-center mt-4">
    <% if logged_in? && current_user.admin? %>
        <%= link_to "Edit the category name", edit_category_path(@category), class: "btn btn-outline-success" %>
    <% end %>
</div>

<div class="flickr_pagination mt-4">
  <%= will_paginate @articles, :container => false %>
</div>

<h3 class="text-center mt-4"> Articles </h1>
<%= render 'articles/article'%>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>